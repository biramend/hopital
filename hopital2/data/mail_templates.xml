<?xml version="1.0" encoding="utf-8"?> 
<odoo>
     <data noupdate="0">
    <!--Email template -->
        <record id="email_template_consultation_patient" model="mail.template">
                <field name="name">Consultation Patient Mail</field>
                <field name="email_from">"Cabinet Medical Dr Diam√© Faye" &lt;no-reply@tdsi.sn&gt;</field>
                <field name="email_to">${object.patient_id.email}</field>
                <field name="subject">Rendez-vous de votre prochaine consultation</field>
                <field name="model_id" ref="hopital2.model_hopital2_consultation"/>
                <field name="auto_delete" eval="True"/>
                <field name="body_html"><![CDATA[

                    <div style="background-color:blue;">Bonjour ${object.patient_id.lastname} ${object.patient_id.name},<br/>
                     votre prochaine consultation est 
                     <span style="color: red;">${object.date_prochaine_consultation}.</span><br/>
                     Bien cordialement Dr Faye.
                    </div>

                        ]]>
                </field>
        </record>
    </data>
</odoo>
